package com.company;
public class Main{
    public static void main(String[] args){
        int myAge = 22;
        int herAge = myAge;
        System.out.println(herAge);
    }
}


//eg 2: string..(is reference type in java even tho it looks like primitive)
package com.company;

public class Main{
    public static void main(String[] args){
        String samira = "  Bolod" + "!";
        System.out.println(samira.toLowerCase());
        System.out.println(samira.toUpperCase());
        //trims unnessery spaces.
        System.out.println(samira.trim());
        System.out.println(samira.length());
        System.out.println(samira.indexOf("d"));
        System.out.println(samira.replace("!" , "."));
        System.out.println(samira.startsWith("!"));
        System.out.println(samira.endsWith("!"));
        System.out.println(samira);
    }
}



//Primitive type
package com.company;
public class Main{
    public static void main(String[] args){
        byte age0 = 100;
        int age1 = 1000000000;
        long age2 = 222222222222222222L;
        char letter = 'A';
        float age3 = 33.3F;
        double age4 = 33.2;
        boolean age5 = true;
    }
}


//eg 2
//here the value wont update
package com.company;

public class Main{
    public static void main(String[] args){
        byte x= 1;
        byte y=x;
        x= 5;
        System.out.println(y);
    }
}





//Reference type
//This code will show current time of your device
package com.company;

import java.util.Date;

public class Main{
    public static void main(String[] args){
        Date now = new Date();
        System.out.println(now);
    }
}


//eg 2
//here the value will update itself
package com.company;

import java.awt.*;

public class Main{
    public static void main(String[] args){
        Point point1 = new Point(1,1);
        Point point2 = point1;
        point1.x =2;
        System.out.println(point2);
    }
}
