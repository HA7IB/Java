package com.company;

public class Main{
    public static void main(String[] args){
        //float to int
       int result = Math.round(2.22F);
        System.out.println(result);
       //double to long
        double resul = Math.round(2.22);
        System.out.println(resul);

        int lol=(int) Math.ceil(2.2F);
        System.out.println(lol);

        int lo=(int) Math.floor(2.2F);
        System.out.println(lo);

        int a = Math.max(1,3);
        System.out.println(a);

        int b = Math.min(1,3);
        System.out.println(b);
    }
}





eg 2:



package com.company;

public class Main{
    public static void main(String[] args){
        //always generate random double number between 0-1
        double result = Math.random();
        System.out.println(result);
        //0-100
        double resul = Math.random() * 100;
        System.out.println(resul);
        //for int number 0-100
        double resu = Math.round(Math.random() * 100);
        System.out.println(resu);
        //int 0-100
        int res = (int)(Math.random() * 100);
        System.out.println(res);
    }
}
